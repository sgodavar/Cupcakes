@model Cupcakes_shop.BOL.Ingredient

@{
    ViewBag.Title = "CreateIngredients";
}

<h2>CreateIngredients</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Ingredients", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <h4>Add ingredients sep by ,</h4>
                @Html.TextAreaFor(model => model.IngredientName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IngredientName, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Home", "Index")
</div>


